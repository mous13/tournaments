<script src="https://unpkg.com/@phosphor-icons/web@2.1.1"></script>
<div class="grid-xs-1 grid-sm-1 grid-md-12 grid-lg-12 grid-xl-12 gap-4">
        <div class="col-10">Tournaments</div>
        <div class="col-2 flex justify-end">
            <a class="btn-primary" href="{{ path('tournaments_tournaments_new') }}">
                <i class="ph ph-plus"></i>
                New Tournament
            </a>

        </div>
    </div>

    {% for tournament in tournaments %}
        <div class="card mb-5">
            <div class="card-body flex flex-col">
                <div class="flex flex-row">
                    <div class="w-50">
                        {{ tournament.name }}
                        {% if tournament.visibility == "invite" %}<i class="ph ph-lock-simple" title="Invite Only"></i>{% else %}<i class="ph ph-lock-simple-open" title="Public"></i>{% endif %}</div>
                </div>
            </div>
        </div>
    {% endfor %}
