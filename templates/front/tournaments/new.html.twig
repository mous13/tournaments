{% extends '@Forumify/frontend/base.html.twig' %}
{% block body %}
    {{ form_start(form) }}
    <div class="card">
        <div class="card-title">New Tournament</div>
        <div class="card-body">
            {{ form_row(form.name) }}
            {{ form_row(form.participantType) }}
            {{ form_row(form.visibility) }}
            {{ form_row(form.image) }}
        </div>
    </div>
    <div class="flex justify-center items-center gap-2">
        <button type="submit" class="btn-primary">Submit</button>
    </div>
    {{ form_end(form) }}
{% endblock %}